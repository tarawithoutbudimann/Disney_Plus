<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllMovie">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:clickable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/filmbioskop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Film Bioskop"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="35sp"
            app:layout_constraintStart_toEndOf="@+id/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <!--  film 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/film1"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginTop="35dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/filmbioskop"
            app:layout_constraintEnd_toStartOf="@+id/film2"
            app:layout_constraintStart_toStartOf="parent"
            android:backgroundTint="@color/black"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/gfilm1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/anabelle"
                android:scaleType="fitXY"
                android:alpha="0.75"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/jfilm1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anabelle"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="125dp" />
                <RatingBar
                    android:id="@+id/rating1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:numStars="5"
                    android:rating="4"
                    android:isIndicator="true"
                    android:progressTint="#FFC107"
                    android:progressBackgroundTint="@color/white" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <!--film 2-->
        <androidx.cardview.widget.CardView
            android:id="@+id/film2"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginTop="35dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/filmbioskop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/film1"
            android:backgroundTint="@color/black"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/gfilm2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/nun2"
                android:scaleType="fitXY"
                android:alpha="0.75"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/jfilm2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The NUN 2"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="125dp" />
                <RatingBar
                    android:id="@+id/rating2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:numStars="5"
                    android:rating="5"
                    android:isIndicator="true"
                    android:progressTint="#FFC107"
                    android:progressBackgroundTint="@color/white" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <!--  film 3 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/film3"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginTop="35dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/film1"
            app:layout_constraintEnd_toStartOf="@+id/film4"
