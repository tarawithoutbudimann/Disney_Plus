<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AdminEdit"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/bg">
    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="400dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardgambar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="8dp"
        android:backgroundTint="@color/gray">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titleTaskTxt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="Edit Movie"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/closeImg1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:src="@drawable/baseline_close_24" />

            <View
                android:id="@+id/viewHLine1"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@id/titleTaskTxt1"
                android:background="@color/lightgray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewHLine1"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="8dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/titlefield1"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/bgtext"
                    android:backgroundTint="#F5F5F5"
                    android:drawableTint="@color/gray"
                    android:drawablePadding="25dp"
                    android:hint="Title"
                    android:textColorHint="@color/gray"
                    android:inputType="textMultiLine"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="10dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    android:lines="5"
                    android:maxLines="5"/>

                <EditText
                    android:id="@+id/directorfield1"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/bgtext"
                    android:backgroundTint="#F5F5F5"
                    android:drawableTint="@color/gray"
                    android:drawablePadding="25dp"
                    android:hint="Director"
                    android:textColorHint="@color/gray"
                    android:inputType="textMultiLine"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="10dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    android:lines="5"
                    android:maxLines="5"/>

                <EditText
                    android:id="@+id/writerfield1"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/bgtext"
                    android:backgroundTint="#F5F5F5"
                    android:drawableTint="@color/gray"
                    android:drawablePadding="25dp"
                    android:hint="Writer"
                    android:textColorHint="@color/gray"
                    android:inputType="textMultiLine"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="10dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    android:lines="5"
                    android:maxLines="5"/>
                <EditText
                    android:id="@+id/ratingfield1"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/bgtext"
                    android:drawableTint="@color/gray"
                    android:drawablePadding="25dp"
                    android:hint="Rating"
                    android:textColorHint="@color/gray"
                    android:inputType="textMultiLine"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="10dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    android:lines="5"
                    android:maxLines="5"/>
                <EditText
                    android:id="@+id/sinopsisfield1"
                    android:layout_width="350dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/bgtext"
                    android:drawablePadding="25dp"
                    android:hint="Sinopsis"
                    android:textColorHint="@color/gray"
                    android:inputType="textMultiLine"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="10dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:lines="5"
                    android:maxLines="5"/>
                <Button
                    android:id="@+id/uploadimage2"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose File"/>

                <ImageView
                    android:id="@+id/imgedit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp">
                </ImageView>

                <Button
                    android:id="@+id/editmovie"
                    android:layout_width="200dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="6dp"
                    android:backgroundTint="@color/darkblue"
                    android:textColor="@color/lightgray"
                    android:text="Edit Movie"
                    android:textStyle="bold"
                    android:textSize="16dp" />

            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    </ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>
